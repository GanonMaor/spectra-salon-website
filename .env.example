# ================================ # ✅ Neon Database # ================================
# חיבור ל־Neon (Postgres). כולל ?sslmode=require.
NEON_DATABASE_URL=postgresql://<user>:<password>@<host>/<database>?sslmode=require

# שירות אימיילים (Resend). מפתח סודי לשרת בלבד.
RESEND_API_KEY=<your_resend_api_key>

# ================================ # ✅ JWT Secret (used for authentication) # ================================
# סוד לחתימת JWT בשרת. אל תקשיחו ערך אמיתי בקוד/PR.
JWT_SECRET=<your_random_long_secret>

# אם יש אימות ל־webhooks בצד שלנו (לא של SUMIT) השתמשו בזה; אחרת אפשר להסיר.
WEBHOOK_SECRET=<your_internal_webhook_secret>

# ================================ # ✅ SUMIT API - Backend (for Node.js / Netlify Functions) # ================================
# מפתח פרטי של SUMIT — שרת בלבד (Netlify Functions/Runtime ON, Builds OFF).
SUMIT_API_KEY=<your_sumit_private_api_key>

# מזהה הארגון ב-SUMIT — שרת בלבד.
# שמרו רק אחד: מומלץ להשתמש ב-SUMIT_ORGANIZATION_ID.
SUMIT_ORGANIZATION_ID=<your_sumit_org_id>
# (אופציונלי/להסרה אם מיישרים שמות:) SUMIT_ORG_ID=<same_as_above>

# בסיס ה-API של SUMIT — לרוב https://api.sumit.co.il
SUMIT_API_URL=https://api.sumit.co.il

# ================================ # ✅ SUMIT API - Frontend (Vite env vars must start with VITE_) # ================================
# מפתח ציבורי (APIPublicKey) של SUMIT — נגיש לקליינט (Builds ON; Functions/Runtime OFF).
VITE_SUMIT_PUBLISHABLE_KEY=<your_sumit_public_key>

# מזהה ארגון שברצונכם לחשוף לקליינט (אם הטופס צריך אותו).
VITE_SUMIT_ORGANIZATION_ID=<your_sumit_org_id>

# כתובת ה-API לקליינט (אם צריך לצורכי קונפיגורציה/SDK).
VITE_SUMIT_API_URL=https://api.sumit.co.il

# ================================ # ✅ Google Maps + Places API # ================================
# מפתח גוגל לקליינט. הגדירו הגבלות דומיין ב-GCP.
VITE_GOOGLE_API_KEY=<your_google_maps_api_key>

# ================================ # ✅ Stripe (if used) # ================================
# מפתח פומבי של Stripe לקליינט (אם יש אינטגרציה).
VITE_STRIPE_PUBLISHABLE_KEY=<your_stripe_publishable_key>

# ================================ # ✅ Emails & App URLs # ================================
EMAIL_FROM=support@salonos.ai
EMAIL_REPLY_TO=support@salonos.ai

# בסיס ה־URL של האפליקציה (לינקים במיילים/OAuth/Callbacks). בלוקאל: http://localhost:8888
APP_BASE_URL=http://localhost:8888

# ================================ # ✅ Environment & Metadata # ================================
# ערך ברירת מחדל ל־Node (development/production/test).
NODE_ENV=development

# שם האפליקציה וגרסה המוצגת ב־UI.
VITE_APP_NAME=Spectra Salon
VITE_APP_VERSION=2.2.0

# גרסת Node המומלצת בסביבת הרצה/CI.
NODE_VERSION=18
